<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/search_bg"
    android:backgroundTint="@color/white"
    android:elevation="5dp"
    android:minHeight="120dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/donor_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/default_pfp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/donor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/donor_img"
        app:layout_constraintStart_toEndOf="@+id/donor_img"
        app:layout_constraintTop_toTopOf="@+id/donor_img">

        <TextView
            android:id="@+id/donorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donor Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donor_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/outline_location"
            android:drawablePadding="2dp"
            android:drawableTint="@color/red"
            android:maxLines="2"
            android:text="City, Province"
            android:textSize="14sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Type"
        android:textColor="@color/black_v2"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/donor_img"
        app:layout_constraintTop_toBottomOf="@id/donor_img" />


    <TextView
        android:id="@+id/blood_G"
        android:layout_width="60dp"
        android:layout_height="31dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/red"
        android:text="A +ve"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/textView2"
        app:layout_constraintStart_toEndOf="@id/textView2"
        app:layout_constraintTop_toTopOf="@id/textView2" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Phone No:"
        android:textColor="@color/black_v2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"/>


    <TextView
        android:id="@+id/phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/red"
        android:text="03313957715"
        app:layout_constraintBottom_toBottomOf="@+id/phone"
        app:layout_constraintStart_toEndOf="@+id/phone"
        app:layout_constraintTop_toTopOf="@+id/phone" />


</androidx.constraintlayout.widget.ConstraintLayout>