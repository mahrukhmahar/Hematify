<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid background color -->
    <solid android:color="@color/white"/> <!-- White background, you can change the color -->

    <!-- Border around the spinner -->
    <stroke
        android:color="@color/black_v1" android:width="1dp"/>     <!-- Border width -->

    <!-- Rounded corners -->
    <corners android:radius="10dp"/> <!-- Rounded corners, adjust radius as needed -->

    <!-- Padding inside the spinner (optional) -->
    <padding
        android:left="10dp"
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp"/>
</shape>